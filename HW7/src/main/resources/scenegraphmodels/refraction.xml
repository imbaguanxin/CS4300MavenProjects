        <specular>1 1 1</specular>
        <absorption>.01</absorption>
        <refractive>1.55</refractive>
      </material>
    </object>
  </transform>

  <transform>
    <set>
      <translate>10 0 0</translate>
    </set>
    <object instanceof="sphere">
      <material>
        <ambient>1 1 1</ambient>
        <diffuse>1 1 1</diffuse>
        <specular>1 1 1</specular>
        <absorption>.01</absorption>
        <refractive>1.55</refractive>
      </material>
    </object>
  </transform>

  <transform>
    <set>
      <translate>10 0 0</translate>
    </set>
